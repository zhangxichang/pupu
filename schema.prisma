datasource db {
  provider = "sqlite"
}

generator kysely {
  provider          = "prisma-kysely"
  output            = "src/generated"
  fileName          = "db_schema.ts"
  bytesTypeOverride = "Uint8Array"
}

model user {
  id     String @id
  key    Bytes
  name   String @unique
  avatar Bytes?
  bio    String @default("还没有自我介绍")
}

model friend {
  id      String @id
  user_id String
  name    String
  avatar  Bytes?
  bio     String
}

model message {
  id        Int      @id @default(autoincrement())
  sender_id String
  timestamp DateTime @default(now())
  text      String
}
