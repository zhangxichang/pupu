{
    "include": [
        "./src",
        "./vite.config.ts",
        "./eslint.config.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "noEmit": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "noUncheckedSideEffectImports": true,
        "noFallthroughCasesInSwitch": true,
        "useDefineForClassFields": true
    }
}